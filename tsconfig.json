{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"]  // Ensure types are picked from here
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
